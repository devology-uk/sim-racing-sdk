<Window x:Class="SimRacingSdk.Lmu.Demo.CarExplorer.CarExplorerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimRacingSdk.Lmu.Demo.CarExplorer"
        mc:Ignorable="d"
        Title="Car Explorer"
        Height="650"
        Width="900"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        d:DataContext="{d:DesignInstance local:CarExplorerViewModel}"
        Background="LightGray">
    <Window.InputBindings>
        <KeyBinding Gesture="CTRL+SHIFT+ALT+C"
                    Command="{Binding ExportCsvCommand}" />
    </Window.InputBindings>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ListBox Grid.Column="0"
                 Grid.Row="0"
                 Grid.RowSpan="2"
                 ItemsSource="{Binding CarClasses}"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Stretch"
                 SelectedItem="{Binding SelectedClass, Mode=TwoWay}"
                 MinWidth="100"/>

        <DataGrid Grid.Column="1"
                  Grid.Row="0"
                  ItemsSource="{Binding Cars}"
                  SelectedItem="{Binding SelectedCar, Mode=TwoWay}"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Stretch"
                  Height="200"
                  AutoGenerateColumns="False"
                  Margin="5"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Manufacturer"
                                    Binding="{Binding Manufacturer}" />
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding DisplayName}" />
                <DataGridTextColumn Header="Engine"
                                    Binding="{Binding Engine}" />
                <DataGridTextColumn Header="Transmission"
                                    Binding="{Binding Transmission}" />
            </DataGrid.Columns>
        </DataGrid>
        <GroupBox Grid.Column="1"
                  Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Header="Car Details"
                  DataContext="{Binding SelectedCar}"
                  Margin="10"
                  Background="LightGray">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Image Grid.Column="0"
                       Grid.Row="0"
                       Source="{Binding Manufacturer, Converter={StaticResource CarManufacturerImageSourceConverter}}"
                       Height="64" />
                <Label Grid.Column="1"
                       Grid.Row="0"
                       Grid.ColumnSpan="3"
                       FontWeight="Bold"
                       FontSize="16"
                       Content="{Binding DisplayName}"
                       VerticalAlignment="Center" />

                <Label Grid.Column="0"
                       Grid.Row="1"
                       Content="Transmission"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="1"
                       Grid.Row="1"
                       Content="{Binding Transmission}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="0"
                       Grid.Row="2"
                       Content="Engine"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="1"
                       Grid.Row="2"
                       Content="{Binding Engine}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="0"
                       Grid.Row="3"
                       Content="Power (BHP)"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="1"
                       Grid.Row="3"
                       Content="{Binding PowerBhp}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="0"
                       Grid.Row="4"
                       Content="Power (KW)"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="1"
                       Grid.Row="4"
                       Content="{Binding PowerKw}"
                       HorizontalAlignment="Left" />



                <Label Grid.Column="2"
                       Grid.Row="1"
                       Content="Weight (KG)"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="3"
                       Grid.Row="1"
                       Content="{Binding WeightKg}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="2"
                       Grid.Row="2"
                       Content="Height (MM)"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="3"
                       Grid.Row="1"
                       Content="{Binding HeightMm}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="2"
                       Grid.Row="3"
                       Content="Length (MM)"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="3"
                       Grid.Row="4"
                       Content="{Binding LengthMm}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="2"
                       Grid.Row="4"
                       Content="Width (MM)"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="3"
                       Grid.Row="4"
                       Content="{Binding WidthMm}"
                       HorizontalAlignment="Left" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>