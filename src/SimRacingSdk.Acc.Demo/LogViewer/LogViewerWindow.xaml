<Window x:Class="SimRacingSdk.Acc.Demo.LogViewer.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimRacingSdk.Acc.Demo.LogViewer"
        mc:Ignorable="d"
        Title="Sim Racing SDK - Log Viewer"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance local:LogViewerViewModel}"
        PreviewKeyDown="HandlePreviewKeyDown">
    <Window.InputBindings>
        <KeyBinding Key="Right"
                    Modifiers="Alt"
                    Command="{Binding NextPageCommand}" />
        <KeyBinding Key="Left"
                    Modifiers="Alt"
                    Command="{Binding PreviousPageCommand}" />
    </Window.InputBindings>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Column="0"
                     Grid.Row="0"
                     Grid.ColumnSpan="4">
            <ToolBar>
                <Button Command="{Binding DeleteSelectedLogFolderCommand}">
                    <Image Source="/Images/trash.png" />
                </Button>
            </ToolBar>
        </ToolBarTray>

        <Label Grid.Column="0"
               Grid.Row="1"
               Content="Search" />
        <TextBox Grid.Column="1"
                 Grid.Row="1"
                 Grid.ColumnSpan="2"
                 HorizontalAlignment="Left"
                 Width="300"
                 Text="{Binding Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <Label Grid.Column="0"
               Grid.Row="2"
               Content="Log Folders"
               HorizontalAlignment="Center" />
        <ListBox Grid.Column="0"
                 Grid.Row="3"
                 DisplayMemberPath="Name"
                 ItemsSource="{Binding LogFolders}"
                 SelectedItem="{Binding SelectedLogFolder, Mode=TwoWay}"
                 VerticalAlignment="Stretch">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel VirtualizationMode="Recycling" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

        <Label Grid.Column="1"
               Grid.Row="2"
               Content="Logs"
               HorizontalAlignment="Center" />
        <ListBox Grid.Column="1"
                 Grid.Row="3"
                 DisplayMemberPath="FileName"
                 ItemsSource="{Binding LogFiles}"
                 SelectedItem="{Binding SelectedLog, Mode=TwoWay}"
                 VerticalAlignment="Stretch">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel VirtualizationMode="Recycling" />
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>
        </ListBox>

        <Label Grid.Column="2"
               Grid.Row="2"
               Content="Log Entries"
               HorizontalAlignment="Center" />
        <Grid Grid.Column="2"
              Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListBox Grid.Column="0"
                     Grid.Row="0"
                     DisplayMemberPath="Content"
                     ItemsSource="{Binding LogEntries}"
                     SelectedItem="{Binding SelectedLogEntry, Mode=TwoWay}"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch" />

            <StackPanel Grid.Column="0"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">

                <Label Content="Page Size"
                       VerticalAlignment="Center" />
                <TextBox Text="{Binding PageSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="50"
                         TextAlignment="Center"
                         VerticalContentAlignment="Center"
                         Margin="5 0 10 0" />

                <Button Command="{Binding FirstPageCommand}">
                    <Image Source="/Images/button_blue_goto_first.png" />
                </Button>

                <Button Command="{Binding PreviousPageCommand}">
                    <Image Source="/Images/button_blue_goto_previous.png" />
                </Button>
                <Label Content="Page"
                       VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="50"
                         TextAlignment="Center"
                         VerticalContentAlignment="Center" />
                <Label Content="of"
                       VerticalAlignment="Center" />
                <Label Content="{Binding PageCount}"
                       VerticalAlignment="Center" />
                <Button Command="{Binding NextPageCommand}">
                    <Image Source="/Images/button_blue_goto_next.png" />
                </Button>
                <Button Command="{Binding LastPageCommand}">
                    <Image Source="/Images/button_blue_goto_last.png" />
                </Button>
            </StackPanel>

        </Grid>

        <Label Grid.Column="3"
               Grid.Row="2"
               Content="Details"
               HorizontalAlignment="Center" />
        <DataGrid Grid.Column="3"
                  Grid.Row="3"
                  ItemsSource="{Binding LogEntryProperties}"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Center"
                  Foreground="Black"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    FontWeight="Bold" />
                <DataGridTextColumn Header="Value"
                                    Binding="{Binding Value}" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>