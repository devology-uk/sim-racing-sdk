<?xml version="1.0" encoding="utf-8" ?>

<!-- XSD manual extracted from package NLog.Schema: https://www.nuget.org/packages/NLog.Schema-->
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      internalLogFile="c:\temp\nlog-internal.log"
      internalLogLevel="Info">
	<variable name="logDirectory"
	          value="logs/${shortdate}" />

	<!-- the targets to write to -->
	<targets>
		<default-wrapper xsi:type="AsyncWrapper">
			<wrapper-target xsi:type="RetryingWrapper" />
		</default-wrapper>
		<target xsi:type="File"
		        name="logfile"
		        fileName="${logDirectory}/demo.log"
		        layout="${longdate}|${level}|${message} |${all-event-properties} ${exception:format=tostring}" />
		<target xsi:type="File"
		        name="udpDemo"
		        fileName="${logDirectory}/udp-demo.log"
		        layout="${longdate}|${level}|${message} |${all-event-properties} ${exception:format=tostring}" />
		<target xsi:type="File"
		        name="sharedMemoryDemo"
		        fileName="${logDirectory}/shared-memory-demo.log"
		        layout="${longdate}|${level}|${message} |${all-event-properties} ${exception:format=tostring}" />
		<target xsi:type="File"
		        name="telemetryOnlyDemo"
		        fileName="${logDirectory}/telemetry-only-demo.log"
		        layout="${longdate}|${level}|${message} |${all-event-properties} ${exception:format=tostring}" />
		<target xsi:type="File"
		        name="monitorDemo"
		        fileName="${logDirectory}/monitor-demo.log"
		        layout="${longdate}|${level}|${message} |${all-event-properties} ${exception:format=tostring}" />
		<target xsi:type="Console"
		        name="logconsole"
		        layout="${longdate}|${level}|${message} |${all-event-properties} ${exception:format=tostring}" />
	</targets>

	<!-- rules to map from logger name to target -->
	<rules>
		<logger name="SimRacingSdk.Acc.Demo.Demos.UdpDemo"
		        minlevel="Trace"
		        writeTo="udpDemo,logConsole"
				final="true"/>
		<logger name="SimRacingSdk.Acc.Demo.Demos.SharedMemoryDemo"
		        minlevel="Trace"
		        writeTo="sharedMemoryDemo,logConsole"
		        final="true" />
		<logger name="SimRacingSdk.Acc.Demo.Demos.TelemetryOnlyDemo"
		        minlevel="Trace"
		        writeTo="telemetryOnlyDemo,logConsole"
		        final="true" />
		<logger name="SimRacingSdk.Acc.Demo.Demos.MonitorDemo"
		        minlevel="Trace"
		        writeTo="monitorDemo,logConsole"
		        final="true" />
		<logger name="SimRacingSdk.Acc.Demo.MainWindowViewModel"
		        minlevel="Trace"
		        writeTo="logFile,logConsole"
		        final="true" />
		<logger name="*"
		        minlevel="Trace"
		        writeTo="logfile,logconsole" />
	</rules>
</nlog>