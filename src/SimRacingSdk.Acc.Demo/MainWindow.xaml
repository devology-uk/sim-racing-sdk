<Window x:Class="SimRacingSdk.Acc.Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimRacingSdk.Acc.Demo"
        xmlns:console="clr-namespace:SimRacingSdk.Acc.Demo.Controls.Console"
        mc:Ignorable="d"
        Title="Sim Racing SDK Demo For ACC"
        Height="800"
        Width="1024"
        d:DataContext="{d:DesignInstance local:MainWindowViewModel}">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="10" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0"
                    Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="10"
                    Visibility="{Binding IsRunningDemo, Converter={StaticResource BooleanToVisibilityInverseConverter}}">
            <Button Content="UDP Demo"
                    Command="{Binding StartUdpDemoCommand}"
                    ToolTip="Start the demo of AccUdpConnection for connection to the ACC Broadcasting API" />
            <Button Content="Shared Memory Demo"
                    Command="{Binding StartSharedMemoryDemoCommand}"
                    ToolTip="Start the demo of AccSharedMemoryConnection for connecting to the ACC Shared Memory channels" />
            <Button Content="Monitor Demo"
                    Command="{Binding StartMonitorDemoCommand}"
                    ToolTip="Start the demo of AccMonitor, which combines AccUdpConnection and AccTelemetryOnlyConnection to provide state and data an application can use." />
            <Button Content="Open Log Folder"
                    Command="{Binding OpenLogFolderCommand}"
                    ToolTip="Open the folder containing the current log file" />
        </StackPanel>

        <Button Grid.Column="0"
                Grid.Row="0"
                HorizontalAlignment="Center"
                Margin="10"
                Content="Stop Demo"
                Command="{Binding StopDemoCommand}"
                ToolTip="Stop the running demo"
                Visibility="{Binding IsRunningDemo, Converter={StaticResource BooleanToVisibilityConverter }}" />
        <console:ConsoleControl Grid.Column="0"
                                Grid.Row="1" />
    </Grid>
</Window>