<Window x:Class="SimRacingSdk.Acc.Demo.TrackExplorer.TrackExplorerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimRacingSdk.Acc.Demo.TrackExplorer"
        mc:Ignorable="d"
        Title="Track Explorer"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        Background="LightGray"
        d:DataContext="{d:DesignInstance local:TrackExplorerViewModel}">
    <Window.InputBindings>
        <KeyBinding Gesture="CTRL+SHIFT+ALT+C"
                    Command="{Binding ExportCsvCommand}" />
    </Window.InputBindings>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ListBox Grid.Column="0"
                 Grid.Row="0"
                 Grid.RowSpan="3"
                 ItemsSource="{Binding TrackNames}"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Stretch"
                 SelectedItem="{Binding SelectedTrackName, Mode=TwoWay}" />

        <GroupBox Grid.Column="1"
                  Grid.Row="0"
                  Header="Track Details"
                  Margin="5"
                  DataContext="{Binding SelectedTrack}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Image Grid.Column="0"
                       Grid.Row="0"
                       Source="{Binding CountryCode, Converter={StaticResource FlagImageSourceConverter}}"
                       Width="64" />
                <Label Grid.Column="1"
                       Grid.Row="0"
                       Content="{Binding ShortName}"
                       FontWeight="Bold"
                       FontSize="16"
                       VerticalAlignment="Bottom" />

                <Label Grid.Column="0"
                       Grid.Row="1"
                       Content="{Binding Country}"
                       HorizontalAlignment="Center" />

                <Label Grid.Column="1"
                       Grid.Row="1"
                       Content="{Binding FullName}"
                       FontWeight="Bold"
                       FontSize="16" />

                <Label Grid.Column="0"
                       Grid.Row="2"
                       Content="Corners"
                       FontWeight="Bold" />

                <Label Grid.Column="1"
                       Grid.Row="2"
                       Content="{Binding Corners}" />

                <Label Grid.Column="0"
                       Grid.Row="3"
                       Content="Latitude"
                       FontWeight="Bold" />

                <Label Grid.Column="1"
                       Grid.Row="3"
                       Content="{Binding Latitude}" />

                <Label Grid.Column="2"
                       Grid.Row="3"
                       Content="Longitude"
                       FontWeight="Bold" />

                <Label Grid.Column="3"
                       Grid.Row="3"
                       Content="{Binding Longitude}" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>