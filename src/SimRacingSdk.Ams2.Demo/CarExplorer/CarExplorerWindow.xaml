<Window x:Class="SimRacingSdk.Ams2.Demo.CarExplorer.CarExplorerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimRacingSdk.Ams2.Demo.CarExplorer"
        mc:Ignorable="d"
        Title="Car Explorer"
        Height="650"
        Width="900"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        d:DataContext="{d:DesignInstance local:CarExplorerViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ListBox Grid.Column="0"
                 Grid.Row="0"
                 Grid.RowSpan="2"
                 ItemsSource="{Binding CarClasses}"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Stretch"
                 SelectedItem="{Binding SelectedClass, Mode=TwoWay}" />

        <DataGrid Grid.Column="1"
                  Grid.Row="0"
                  ItemsSource="{Binding Cars}"
                  SelectedItem="{Binding SelectedCar, Mode=TwoWay}"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Stretch"
                  Height="200"
                  AutoGenerateColumns="False"
                  Margin="5"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Manufacturer"
                                    Binding="{Binding Manufacturer}" />
                <DataGridTextColumn Header="Model"
                                    Binding="{Binding Model}" />
                <DataGridTextColumn Header="Engine"
                                    Binding="{Binding Engine}" />
                <DataGridTextColumn Header="Displacement (L)"
                                    Binding="{Binding DisplacementL}" />
                <DataGridTextColumn Header="Power HP"
                                    Binding="{Binding PowerHp}" />
                <DataGridTextColumn Header="Transmission"
                                    Binding="{Binding Transmission}" />
                <DataGridTextColumn Header="Top Speed KPH"
                                    Binding="{Binding TopSpeedKph}" />
            </DataGrid.Columns>
        </DataGrid>
        <GroupBox Grid.Column="1"
                  Grid.Row="1"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Header="Car Details"
                  DataContext="{Binding SelectedCar}"
                  Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Image Grid.Column="0"
                       Grid.Row="0"
                       Source="{Binding Manufacturer, Converter={StaticResource CarManufacturerImageSourceConverter}}"
                       Height="64" />
                <Label Grid.Column="1"
                       Grid.Row="0"
                       Grid.ColumnSpan="6"
                       FontWeight="Bold"
                       FontSize="16"
                       Content="{Binding Model}"
                       VerticalAlignment="Center" />

                <Label Grid.Column="0"
                       Grid.Row="1"
                       Content="Displacement (L)"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="1"
                       Grid.Row="1"
                       Content="{Binding DisplacementL}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="0"
                       Grid.Row="2"
                       Content="Power (HP)"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="1"
                       Grid.Row="2"
                       Content="{Binding PowerHp}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="0"
                       Grid.Row="3"
                       Content="Torque (Nm)"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="1"
                       Grid.Row="3"
                       Content="{Binding TorqueNm}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="0"
                       Grid.Row="4"
                       Content="Engine"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="1"
                       Grid.Row="4"
                       Content="{Binding Engine}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="0"
                       Grid.Row="5"
                       Content="Engine Placement"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="1"
                       Grid.Row="5"
                       Content="{Binding EnginePlacement}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="0"
                       Grid.Row="6"
                       Content="Transmission"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="1"
                       Grid.Row="6"
                       Content="{Binding Transmission}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="0"
                       Grid.Row="7"
                       Content="Electronics"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="1"
                       Grid.Row="7"
                       Content="{Binding Electronics}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="2"
                       Grid.Row="1"
                       Content="Top Speed (KPH)"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="3"
                       Grid.Row="1"
                       Content="{Binding TopSpeedKph}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="2"
                       Grid.Row="4"
                       Content="Weight (KG)"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="3"
                       Grid.Row="4"
                       Content="{Binding WeightKg}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="2"
                       Grid.Row="5"
                       Content="Weight Distribution"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="3"
                       Grid.Row="5"
                       Content="{Binding WeightDistribution}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="2"
                       Grid.Row="6"
                       Content="Wheel Base (M)"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <Label Grid.Column="3"
                       Grid.Row="6"
                       Content="{Binding WheelBaseM}"
                       HorizontalAlignment="Left" />

                <Label Grid.Column="4"
                       Grid.Row="1"
                       Content="Adjustable Turbo"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <CheckBox Grid.Column="5"
                          Grid.Row="1"
                          IsChecked="{Binding HasAdjustableTurbo}"
                          IsEnabled="False"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center" />

                <Label Grid.Column="4"
                       Grid.Row="2"
                       Content="Boost Button"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <CheckBox Grid.Column="5"
                          Grid.Row="2"
                          IsChecked="{Binding HasBoostButton}"
                          IsEnabled="False"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center" />

                <Label Grid.Column="4"
                       Grid.Row="3"
                       Content="DRS"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <CheckBox Grid.Column="5"
                          Grid.Row="3"
                          IsChecked="{Binding HasDrs}"
                          IsEnabled="False"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center" />

                <Label Grid.Column="4"
                       Grid.Row="4"
                       Content="Onboard Brake Bias"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <CheckBox Grid.Column="5"
                          Grid.Row="4"
                          IsChecked="{Binding HasOnBoardBrakeBias}"
                          IsEnabled="False"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center" />

                <Label Grid.Column="4"
                       Grid.Row="5"
                       Content="Onboard Roll Bars"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <CheckBox Grid.Column="5"
                          Grid.Row="5"
                          IsChecked="{Binding HasOnBoardRollBars}"
                          IsEnabled="False"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center" />

                <Label Grid.Column="4"
                       Grid.Row="6"
                       Content="Headlights"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <CheckBox Grid.Column="5"
                          Grid.Row="6"
                          IsChecked="{Binding HasHeadlights}"
                          IsEnabled="False"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center" />

                <Label Grid.Column="4"
                       Grid.Row="7"
                       Content="Pit Speed Limiter"
                       HorizontalAlignment="Left"
                       FontWeight="SemiBold" />
                <CheckBox Grid.Column="5"
                          Grid.Row="7"
                          IsChecked="{Binding HasPitSpeedLimiter}"
                          IsEnabled="False"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Center" />
            </Grid>
        </GroupBox>
    </Grid>
</Window>