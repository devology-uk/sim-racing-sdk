<Window x:Class="SimRacingSdk.Ams2.Demo.TrackExplorer.TrackExplorerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimRacingSdk.Ams2.Demo.TrackExplorer"
        mc:Ignorable="d"
        Title="Track Explorer"
        Height="500"
        Width="800"
        WindowStartupLocation="CenterOwner"
        WindowStyle="ToolWindow"
        d:DataContext="{d:DesignInstance local:TrackExplorerViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <ListBox Grid.Column="0"
                 Grid.Row="0"
                 Grid.RowSpan="3"
                 ItemsSource="{Binding TrackNames}"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Stretch"
                 SelectedItem="{Binding SelectedTrackName, Mode=TwoWay}" />

        <GroupBox Grid.Column="1"
                  Grid.Row="0"
                  Header="Track Details"
                  Margin="5"
                  DataContext="{Binding SelectedTrack}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Image Grid.Column="0"
                       Grid.Row="0"
                       Source="{Binding CountryCode, Converter={StaticResource FlagImageSourceConverter}}"
                       Width="64" />
                <Label Grid.Column="1"
                       Grid.Row="0"
                       Content="{Binding ShortName}"
                       FontWeight="Bold"
                       FontSize="16"
                       VerticalAlignment="Bottom" />

                <Label Grid.Column="0"
                       Grid.Row="1"
                       Content="{Binding Country}"
                       HorizontalAlignment="Center" />

                <Label Grid.Column="1"
                       Grid.Row="1"
                       Content="{Binding FullName}"
                       FontWeight="Bold"
                       FontSize="16" />

                <Label Grid.Column="0"
                       Grid.Row="2"
                       Content="Altitude (M)"
                       FontWeight="Bold" />

                <Label Grid.Column="1"
                       Grid.Row="2"
                       Content="{Binding AltitudeM}" />

                <Label Grid.Column="0"
                       Grid.Row="3"
                       Content="Latitude"
                       FontWeight="Bold" />

                <Label Grid.Column="1"
                       Grid.Row="3"
                       Content="{Binding Latitude}" />

                <Label Grid.Column="2"
                       Grid.Row="3"
                       Content="Longitude"
                       FontWeight="Bold" />

                <Label Grid.Column="3"
                       Grid.Row="3"
                       Content="{Binding Longitude}" />
            </Grid>
        </GroupBox>

        <GroupBox Grid.Column="1"
                  Grid.Row="2"
                  Header="Layouts"
                  Margin="5"
                  DataContext="{Binding SelectedTrack}"
                  VerticalAlignment="Top">
            <DataGrid AutoGenerateColumns="False"
                      Height="200"
                      ItemsSource="{Binding Layouts}"
                      IsReadOnly="True"
                      VerticalAlignment="Top"
                      Margin="10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}" />
                    <DataGridTextColumn Header="Grade"
                                        Binding="{Binding Grade}" />
                    <DataGridTextColumn Header="Track Type"
                                        Binding="{Binding TrackType}" />
                    <DataGridTextColumn Header="Corners"
                                        Binding="{Binding Corners}" />
                    <DataGridTextColumn Header="Length (KM)"
                                        Binding="{Binding LengthKm}" />
                    <DataGridTextColumn Header="Length (Mi)"
                                        Binding="{Binding LengthMi, StringFormat=N2}" />
                    <DataGridTextColumn Header="Max Grid Size"
                                        Binding="{Binding MaxGridSize}" />
                </DataGrid.Columns>
            </DataGrid>

        </GroupBox>

    </Grid>
</Window>