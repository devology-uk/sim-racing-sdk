<Window x:Class="SimRacingSdk.LogViewer.LogViewerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimRacingSdk.LogViewer"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="Sim Racing SDK - Log Viewer"
        WindowStartupLocation="CenterScreen"
        d:DataContext="{d:DesignInstance local:LogViewerViewModel}"
        PreviewKeyDown="HandlePreviewKeyDown"
        Height="900"
        Width="1200">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SimRacingSdk.LogViewer;component/Icons.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Window.InputBindings>
        <KeyBinding Key="Right"
                    Modifiers="Alt"
                    Command="{Binding NextPageCommand}" />
        <KeyBinding Key="Left"
                    Modifiers="Alt"
                    Command="{Binding PreviousPageCommand}" />
    </Window.InputBindings>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Column="0"
                     Grid.Row="0"
                     Grid.ColumnSpan="4">
            <ToolBar>
                <Button Command="{Binding DeleteSelectedLogFolderCommand}">
                    <Image Source="{StaticResource BinIcon}" />
                </Button>
                <Label Content="Search" />
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left">
                    <TextBox HorizontalAlignment="Left"
                             Width="300"
                             Text="{Binding Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Command="{Binding ClearFilterCommand}">
                        <Image Source="{StaticResource DeleteIcon}" />
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center">
                    <Label Content="Message Types"
                           VerticalAlignment="Center"
                           Margin="5 0" />
                    <xctk:CheckComboBox ItemsSource="{Binding MessageTypes}"
                                        SelectedItemsOverride="{Binding SelectedMessageTypes, Mode=TwoWay}" />
                </StackPanel>
            </ToolBar>
        </ToolBarTray>

        <Label Grid.Column="0"
               Grid.Row="1"
               Content="Log Folders"
               HorizontalAlignment="Center" />
        <ListBox Grid.Column="0"
                 Grid.Row="2"
                 DisplayMemberPath="Name"
                 ItemsSource="{Binding LogFolders}"
                 SelectedItem="{Binding SelectedLogFolder, Mode=TwoWay}"
                 VerticalAlignment="Stretch" />

        <Label Grid.Column="1"
               Grid.Row="1"
               Content="Logs"
               HorizontalAlignment="Center" />
        <ListBox Grid.Column="1"
                 Grid.Row="2"
                 DisplayMemberPath="FileName"
                 ItemsSource="{Binding LogFiles}"
                 SelectedItem="{Binding SelectedLog, Mode=TwoWay}"
                 VerticalAlignment="Stretch" />

        <Label Grid.Column="2"
               Grid.Row="1"
               Content="Log Entries"
               HorizontalAlignment="Center" />
        <Grid Grid.Column="2"
              Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ListBox Grid.Column="0"
                     Grid.Row="0"
                     DisplayMemberPath="Content"
                     ItemsSource="{Binding LogEntries}"
                     SelectedItem="{Binding SelectedLogEntry, Mode=TwoWay}"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch" />

            <StackPanel Grid.Column="0"
                        Grid.Row="1"
                        HorizontalAlignment="Center"
                        Orientation="Horizontal">

                <Label Content="Page Size"
                       VerticalAlignment="Center" />
                <TextBox Text="{Binding PageSize, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="50"
                         TextAlignment="Center"
                         VerticalContentAlignment="Center"
                         Margin="5 0 10 0" />

                <Button Command="{Binding FirstPageCommand}">
                    <Image Source="{StaticResource FirstPageIcon}" />
                </Button>

                <Button Command="{Binding PreviousPageCommand}">
                    <Image Source="{StaticResource PreviousPageIcon}" />
                </Button>
                <Label Content="Page"
                       VerticalAlignment="Center" />
                <TextBox Text="{Binding CurrentPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="50"
                         TextAlignment="Center"
                         VerticalContentAlignment="Center" />
                <Label Content="of"
                       VerticalAlignment="Center" />
                <Label Content="{Binding PageCount}"
                       VerticalAlignment="Center" />
                <Button Command="{Binding NextPageCommand}">
                    <Image Source="{StaticResource NextPageIcon}" />
                </Button>
                <Button Command="{Binding LastPageCommand}">
                    <Image Source="{StaticResource LastPageIcon}" />
                </Button>
            </StackPanel>

        </Grid>

        <Label Grid.Column="3"
               Grid.Row="1"
               Content="Details"
               HorizontalAlignment="Center" />
        <DataGrid Grid.Column="3"
                  Grid.Row="2"
                  ItemsSource="{Binding LogEntryProperties}"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Center"
                  Foreground="Black"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name"
                                    Binding="{Binding Name}"
                                    FontWeight="Bold" />
                <DataGridTextColumn Header="Value"
                                    Binding="{Binding Value}" />
            </DataGrid.Columns>
        </DataGrid>

        <!-- <xctk:PropertyGrid Grid.Column="3" Grid.Row="2" x:Name="PropertyGrid" -->
        <!--                    Width="450" -->
        <!--                    Margin="10"> -->
        <!-- </xctk:PropertyGrid> -->

        <StatusBar Grid.Column="0"
                   Grid.Row="3"
                   Grid.ColumnSpan="4"
                   VerticalAlignment="Bottom"
                   HorizontalAlignment="Stretch">
            <StatusBarItem>
                <TextBlock>
                    Powered by WPF Extended Toolkit by Exceed
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>